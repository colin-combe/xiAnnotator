<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-DBASE_URI=http://127.0.0.1:8083/xiAnnotator/ -Djava.util.logging.loglevel:org.rappsilber=FINE -DXI_DB_CONNECTION=jdbc:postgresql://xi3.bio.ed.ac.uk:5433/xi3 -classpath %classpath org.rappsilber.Main</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -DBASE_URI=http://127.0.0.1:8083/xiAnnotator/ -Djava.util.logging.loglevel:org.rappsilber=FINE -DXI_DB_CONNECTION=jdbc:postgresql://xi3.bio.ed.ac.uk:5433/xi3 -classpath %classpath org.rappsilber.Main</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-DBASE_URI=http://127.0.0.1:8083/xiAnnotator/ -Djava.util.logging.loglevel:org.rappsilber=FINE -DXI_DB_CONNECTION=jdbc:postgresql://xi3.bio.ed.ac.uk:5433/xi3 -classpath %classpath org.rappsilber.Main</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>test.single</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>test-compile</goal>
                <goal>surefire:test</goal>
            </goals>
            <properties>
                <test>${packageClassName} XI_DB_CONNECTION=jdbc:postgresql://xi.bio.ed.ac.uk:5432/xi</test>
            </properties>
        </action>
    </actions>
